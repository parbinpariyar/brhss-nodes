<!DOCTYPE html>
<html lang="en">



    <%- include('./partials/head.ejs') %>
<body>
      <%- include('./partials/header.ejs') %>
      <main>
    <!-- create-post -->

    <section class="newsletter-style-two style-three white-bg vh-100 pt-80 pb-80">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-6 col-xl-7 col-lg-8">
                    <div class="newsletter__title text-center mb-35">
                        <h4 class="title">Update post.</h4>
                    </div>
                    <div class="newsletter__form-wrap text-start">


                        <form method="post" id="update-form">
                            <div class="form-group mb-20">
                                <label for="input-title">Edit Title</label>
                                <input type="text" class="form-control" id="input-title" name="title"
                                    placeholder="Edit title" value="<%= post.title %>">
                            </div>

                            <div class="form-group  mb-20">Edit Description</label>
                                <textarea class="form-control" id="input-description" name="description" rows="3"><%= post.description %></textarea>
                            </div>

                            <div class="form-group  mb-20">
                                <label for="input-category">Reselect Category</label>
                                <select class="form-select" aria-label="Default select example" id="input-category" name="category">
                                    <option selected>Reselect category</option>
                                    <option value="web development" <% if(post.category == 'web development') { %> selected <% } %>>Web Development</option>
                                    <option value="data science" <% if(post.category == 'data science') { %> selected <% } %>>Data Science</option>
                                    <option value="programming language" <% if(post.category == 'programming language') { %> selected <% } %>>Programming Languages</option>
                                    <option value="software engineering" <% if(post.category == 'software engineering') { %> selected <% } %>>Software Engineering</option>

                                </select>
                            </div>

                            <div class="form-group  mb-20">
                                <label class="form-label" for="input-image">Choose image</label>
                                <input type="file" class="form-control" id="input-image" name="image" />
                            </div>


                            <button type="submit" class="btn">Update</button>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- create-post-end -->



      </main>



      <%- include('./partials/footer.ejs') %>


      <script>
        let updateForm  = document.getElementById('update-form')
        updateForm.addEventListener('submit', (event)=>{
            event.preventDefault();

            let title = updateForm.elements['input-title'].value
            let description = updateForm.elements['input-description'].value
            let category = updateForm.elements['input-category'].value

            let post = JSON.stringify( {title, description, category} )

            let updateRoute='http://localhost:4000/posts/<%= post._id %>'

            fetch(updateRoute, {
                method : 'PUT',
                headers:{
                    'Content-Type': 'application/json'
                },
                body: post
            })
            .then((response)=>{
                if (!response.ok) {
                    throw new Error('Could not connect to server.')
                }

                return response.json()
            })
            .then((json)=>{
                alert(json.message)
                window.location.href = json.redirect
            })
            .catch((error)=>{
                alert(error.message)
            })

        })

      </script>

</body>
</html>